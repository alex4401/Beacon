		Sub Pressed()
		  Dim Board As New Clipboard
		  Board.Text = Self.LinkField.Value
		  
		  Me.Caption = "Copied!"
		  Me.Enabled = False
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events ActionButton
