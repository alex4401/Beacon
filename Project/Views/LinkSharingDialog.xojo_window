#tag WindowCode
	#tag Method, Flags = &h0
		Shared Sub Present(Parent As Window, Link As String)
		  If Parent = Nil Then
		    Return
		  End If
		  
		  Dim Win As New LinkSharingDialog
		  Win.LinkField.Value = Link
		  Win.ShowModalWithin(Parent.TrueWindow)
		End Sub
	#tag EndMethod


#tag EndWindowCode

#tag Events CopyLinkButton
