#tag Class
Protected Class LinkLabel
Inherits Label
	#tag Event
		Function MouseDown(X As Integer, Y As Integer) As Boolean
		  #Pragma Unused X
		  #Pragma Unused Y
		  
		  If Self.mShowAsLink Then
		    Self.TextColor = SystemColors.SystemRedColor
		    Return True
		  End If
		End Function
	#tag EndEvent

	#tag Event
		Sub MouseDrag(X As Integer, Y As Integer)
		  If X >= 0 And X <= Self.Width And Y >= 0 And Y <= Self.Height Then
		    Self.TextColor = SystemColors.SystemRedColor
		    #if BeaconUI.CursorsEnabled
		      Self.MouseCursor = System.Cursors.FingerPointer
		    #endif
		  Else
		    Self.TextColor = SystemColors.LinkColor
		    #if BeaconUI.CursorsEnabled
		      Self.MouseCursor = System.Cursors.StandardPointer
		    #endif
		  End If
		End Sub
	#tag EndEvent

	#tag Event
		Sub MouseEnter()
		  #if BeaconUI.CursorsEnabled
		    Self.MouseCursor = System.Cursors.FingerPointer
		  #endif
		End Sub
	#tag EndEvent

	#tag Event
		Sub MouseUp(X As Integer, Y As Integer)
		  If X >= 0 And X <= Self.Width And Y >= 0 And Y <= Self.Height Then
		    RaiseEvent Pressed
		    Self.TextColor = SystemColors.LinkColor
		  End If
		End Sub
	#tag EndEvent

	#tag Event
		Sub Opening()
		  Self.ShowAsLink = Self.ShowAsLink
		  RaiseEvent Opening
		End Sub
	#tag EndEvent


	#tag Hook, Flags = &h0
		Event Opening()
	#tag EndHook

	#tag Hook, Flags = &h0
		Event Pressed()
	#tag EndHook


	#tag Property, Flags = &h21
		Private mShowAsLink As Boolean = True
	#tag EndProperty

	#tag ComputedProperty, Flags = &h0
		#tag Getter
			Get
			  Return Self.mShowAsLink
			End Get
		#tag EndGetter
		#tag Setter
			Set
			  Self.mShowAsLink = Value
			  
			  If Self.mShowAsLink Then
			    Self.TextColor = SystemColors.LinkColor
			    Self.Underline = True
			  Else
			    Self.TextColor = SystemColors.LabelColor
			    Self.Underline = False
			  End If
			End Set
		#tag EndSetter
		ShowAsLink As Boolean
	#tag EndComputedProperty

